---
import LightningIcon from './LightningIcon.astro';

export interface PowerUp {
  name: string;
  description: string;
  imagePath: string;
  isCurse?: boolean;
}

interface Props extends PowerUp {
  revealed: boolean;
}

const { name, description, imagePath, isCurse, revealed } = Astro.props;
---

<div class=`flex flex-col w-64 p-4 pb-6 gap-4 h-full rounded-2xl min-h-[24rem] ${isCurse ? "bg-reddish" : "bg-darkblueish"}`>
{
  revealed ? (
      <img src={imagePath} alt='' class='rounded-2xl min-h-[8rem]' />
      <div class='flex justify-center gap-4 items-center'>
        <LightningIcon color='reddish' />
        <h3 class='font-quantico text-xl text-center'>{name}</h3>
        <LightningIcon color='reddish' />
      </div>
      <p>{description}</p>
  ) : (
      <p class='font-quantico text-9xl bg-[#1C2A2C] rounded-xl text-darkblueish text-center'>
        ?
      </p>
      <div class='flex justify-center gap-4 items-center'>
        <LightningIcon color={isCurse ? 'blueish' : 'reddish'} />
        <h3 class='font-quantico text-xl text-center'>
          Mystisk {isCurse ? 'Curse' : 'Powerup'}
        </h3>
        <LightningIcon color={isCurse ? 'blueish' : 'reddish'} />
      </div>
      <p>Denne {isCurse ? 'cursen' : 'powerupen'} avsl√∏res snart!</p>
  )
}
</div>
