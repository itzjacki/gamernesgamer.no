---
import LightningIcon from './LightningIcon.astro';

export interface PowerUp {
  name: string;
  description: string;
  imagePath: string;
}

interface Props extends PowerUp {
  revealed: boolean;
}

const { name, description, imagePath, revealed } = Astro.props;
---

{
  revealed ? (
    <div class="flex flex-col w-64 p-4 pb-6 gap-4 bg-darkblueish h-full rounded-2xl min-h-[24rem]">
      <img src={imagePath} alt="" class="rounded-2xl min-h-[8rem]" />
      <div class="flex justify-center gap-4 items-center">
        <LightningIcon color="reddish" />
        <h3 class="font-quantico text-xl text-center">{name}</h3>
        <LightningIcon color="reddish" />
      </div>
      <p>{description}</p>
    </div>
  ) : (
    <div class="flex flex-col w-64 p-4 pb-6 gap-4 bg-darkblueish h-full rounded-2xl min-h-[24rem]">
      <p class="font-quantico text-9xl bg-[#1C2A2C] rounded-xl text-darkblueish text-center">
        ?
      </p>
      <div class="flex justify-center gap-4 items-center">
        <LightningIcon color="reddish" />
        <h3 class="font-quantico text-xl text-center">Mystisk Powerup</h3>
        <LightningIcon color="reddish" />
      </div>
      <p>Denne powerupen avsl√∏res snart!</p>
    </div>
  )
}
